      <span class="n">answer</span><span class="p">.</span><span class="n">push_back</span><span class="p">(</span><span class="n">top</span><span class="p">);</span>
      <span class="n">cnt</span> <span class="o">=</span> <span class="mi">0</span><span class="p">;</span>
