<span class="kt">void</span> <span class="nf">solve</span><span class="p">()</span> <span class="p">{</span>
    <span class="n">n</span> <span class="o">=</span> <span class="n">K</span> <span class="o">-</span> <span class="mi">5</span><span class="p">;</span>  <span class="c1">//배울 수 있는 갯수</span>
