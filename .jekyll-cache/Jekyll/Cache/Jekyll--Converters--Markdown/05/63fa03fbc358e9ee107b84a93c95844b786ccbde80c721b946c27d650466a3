                    <span class="p">}</span>
                <span class="p">}</span>
            <span class="p">}</span>
    
            <span class="kt">int</span> <span class="n">differnce</span> <span class="o">=</span> <span class="n">abs</span><span class="p">(</span><span class="n">link</span> <span class="o">-</span> <span class="n">start</span><span class="p">);</span>
